<?xml version="1.0"?>
<psalm
    totallyTyped="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <LessSpecificReturnType errorLevel="info" />
        <!-- UnusedVariable false positive https://github.com/vimeo/psalm/issues/6145 -->
        <!-- Cannot inline suppress UnusedVariable https://github.com/vimeo/psalm/issues/5537 -->
        <UnusedVariable>
            <errorLevel type="suppress">
                <file name="src/CompleteLexer.php" />
            </errorLevel>
        </UnusedVariable>
    </issueHandlers>
</psalm>
